<UserControl x:Class="FocusAssistant.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Stats Row -->
            <Grid Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Focus Time Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="⏰" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Focus Time Today" 
                                 FontSize="12" 
                                 Foreground="#6B7280" 
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="2h 34m" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="#1E40AF"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Distractions Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🚫" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Distractions" 
                                 FontSize="12" 
                                 Foreground="#6B7280" 
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="12" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="#EF4444"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Productivity Score Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Productivity Score" 
                                 FontSize="12" 
                                 Foreground="#6B7280" 
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="78%" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="#10B981"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Streak Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔥" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Focus Streak" 
                                 FontSize="12" 
                                 Foreground="#6B7280" 
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="5 days" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="#F59E0B"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Row -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Activity Timeline -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📈 Today's Activity Timeline" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Margin="0,0,0,20"/>
                        <Border Height="200" Background="#F8FAFC" CornerRadius="8">
                            <TextBlock Text="Chart placeholder - Will implement with LiveCharts" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     Foreground="#6B7280"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Top Apps -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📱 Most Used Apps" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Margin="0,0,0,15"/>

                        <StackPanel>
                            <Border Background="#F3F4F6" Padding="10" CornerRadius="6" Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Chrome" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text="45m" Foreground="#6B7280"/>
                                </Grid>
                            </Border>

                            <Border Background="#F3F4F6" Padding="10" CornerRadius="6" Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Visual Studio" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text="32m" Foreground="#6B7280"/>
                                </Grid>
                            </Border>

                            <Border Background="#F3F4F6" Padding="10" CornerRadius="6" Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Slack" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text="18m" Foreground="#6B7280"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- AI Recommendations -->
            <Border Style="{StaticResource StatCardStyle}" Margin="10,20,10,10">
                <StackPanel>
                    <TextBlock Text="🤖 AI Recommendations" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Border Background="#DBEAFE" Padding="15" CornerRadius="8" Margin="0,5">
                        <TextBlock Text="💡 Consider taking a 5-minute break. You've been focused for 45 minutes!" 
                                 Foreground="#1E40AF"
                                 TextWrapping="Wrap"/>
                    </Border>

                    <Border Background="#D1FAE5" Padding="15" CornerRadius="8" Margin="0,5">
                        <TextBlock Text="🎯 Great job! Your focus time today is 23% higher than yesterday." 
                                 Foreground="#065F46"
                                 TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>