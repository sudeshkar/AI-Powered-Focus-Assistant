<UserControl x:Class="FocusAssistant.Views.TrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Status Header -->
            <Border Style="{StaticResource StatusCardStyle}" Margin="10,20,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="📊 Real-Time Activity Tracking" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="#1E40AF"/>
                        <TextBlock Name="StatusText" 
                                 Text="Click 'Start Tracking' to begin monitoring your activity" 
                                 FontSize="14" 
                                 Foreground="#6B7280"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1" CornerRadius="8" Background="#EF4444">
                        <Button Name="TrackingButton"
                            Content="🔴 Start Tracking"
                            Background="Transparent"
                            Foreground="White"
                            Padding="20,10"
                            BorderThickness="0"
                            FontWeight="Medium"
                            Click="ToggleTracking"/>            
                    </Border>

                </Grid>
            </Border>

            <!-- Current Activity -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="🎯 Current Activity" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Application:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentAppText" 
                                     Text="Not tracking" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Foreground="#1E40AF"
                                     Margin="0,5,0,15"/>

                            <TextBlock Text="Window Title:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentWindowText" 
                                     Text="N/A" 
                                     FontSize="14" 
                                     TextWrapping="Wrap"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Duration:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentDurationText" 
                                     Text="00:00:00" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="#10B981"
                                     Margin="0,5,0,15"/>

                            <Border Background="#F3F4F6" Padding="10" CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Name="ProductivityIcon" Text="🟢" FontSize="16"/>
                                    <TextBlock Name="ProductivityText" 
                                             Text="Productive" 
                                             FontWeight="Medium" 
                                             Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Session Summary -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="📈 Session Summary" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Time" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TotalTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#1E40AF"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Productive" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="ProductiveTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#10B981"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Distracted" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="DistractedTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#EF4444"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="App Switches" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="AppSwitchesText" 
                                     Text="0" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#F59E0B"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activity Log -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="📝 Recent Activity Log" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ListView Name="ActivityListView" 
                                BorderThickness="0"
                                Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FAFC" 
                                          Padding="15" 
                                          CornerRadius="8" 
                                          Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                     Text="{Binding ProductivityIcon}" 
                                                     FontSize="16" 
                                                     Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding AppName}" 
                                                         FontWeight="Medium"/>
                                                <TextBlock Text="{Binding WindowTitle}" 
                                                         FontSize="12" 
                                                         Foreground="#6B7280"
                                                         TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                     Text="{Binding DurationText}" 
                                                     FontWeight="Medium"
                                                     Foreground="#1E40AF"
                                                     Margin="10,0"/>

                                            <TextBlock Grid.Column="3" 
                                                     Text="{Binding TimeText}" 
                                                     FontSize="12" 
                                                     Foreground="#6B7280"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>