<UserControl x:Class="FocusAssistant.Views.TrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- ✅ Re-usable Card Style -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <!-- ROOT GRID: AI banner floats above ScrollViewer -->
    <Grid>
        <!-- 🎈 Modern Toast Popup -->
        <Border x:Name="AiBanner"
        Panel.ZIndex="1000"
        Visibility="Collapsed"
        Background="#1E40AF"
        CornerRadius="12"
        Padding="20"
        Margin="20"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Width="320">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.5" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="🤖" FontSize="20"/>
                    <TextBlock Text="AI Focus Reminder" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"/>
                </StackPanel>

                <!-- Message -->
                <TextBlock x:Name="AiMessageText"
                       Grid.Row="1"
                       Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                    <Button Content="✅ Yes"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="AiYes_Click"
                    Margin="0,0,6,0"/>
                            <Button Content="❌ No"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#EF4444"
                    Click="AiNo_Click"
                    Margin="0,0,6,0"/>
                        <Button Content="🙈"
                    ToolTip="Ignore"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#6B7280"
                    Click="AiIgnore_Click"/>    
                </StackPanel>
            </Grid>
        </Border>

        <!-- ScrollViewer with all your original content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <!--  *** everything you already had ***  -->
            <!--  (Status, Current Activity, Session Summary, Idle Time, etc.)  -->
            <StackPanel>
                <!-- Status Header -->
                <Border Style="{StaticResource StatusCardStyle}" Margin="10,20,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📊 Real-Time Activity Tracking" 
                                       FontSize="20" FontWeight="Bold" Foreground="#1E40AF"/>
                            <TextBlock Name="StatusText" 
                                       Text="Click 'Start Tracking' to begin monitoring your activity" 
                                       FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" CornerRadius="8" Background="#EF4444">
                            <Button Name="TrackingButton"
                                    Content="🔴 Start Tracking"
                                    Background="Transparent" Foreground="White"
                                    Padding="20,10" BorderThickness="0"
                                    Click="ToggleTracking"/>
                        </Border>
                    </Grid>
                </Border>

            <!-- Current Activity -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="🎯 Current Activity" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Application:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentAppText" 
                                     Text="Not tracking" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Foreground="#1E40AF"
                                     Margin="0,5,0,15"/>

                            <TextBlock Text="Window Title:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentWindowText" 
                                     Text="N/A" 
                                     FontSize="14" 
                                     TextWrapping="Wrap"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Duration:" FontWeight="Medium" Foreground="#6B7280"/>
                            <TextBlock Name="CurrentDurationText" 
                                     Text="00:00:00" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="#10B981"
                                     Margin="0,5,0,15"/>

                            <Border Background="#F3F4F6" Padding="10" CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Name="ProductivityIcon" Text="🟢" FontSize="16"/>
                                    <TextBlock Name="ProductivityText" 
                                             Text="Productive" 
                                             FontWeight="Medium" 
                                             Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Session Summary -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="📈 Session Summary" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Time" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TotalTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#1E40AF"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Productive" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="ProductiveTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#10B981"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Distracted" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="DistractedTimeText" 
                                     Text="00:00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#EF4444"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="App Switches" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="AppSwitchesText" 
                                     Text="0" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#F59E0B"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            <!-- Idle Time Status -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="😴 Idle Time Detection" 
                 FontSize="16" 
                 FontWeight="SemiBold" 
                 Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Current Status" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <Border Name="IdleStatusBorder" 
                      Background="#10B981" 
                      Padding="8,4" 
                      CornerRadius="6" 
                      HorizontalAlignment="Center"
                      Margin="0,5,0,0">
                                <TextBlock Name="IdleStatusText" 
                             Text="🟢 Active" 
                             Foreground="White"
                             FontWeight="Medium"
                             HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Current Idle Time" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="CurrentIdleTimeText" 
                         Text="00:00" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         Foreground="#1E40AF"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total Breaks Today" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TotalBreakTimeText" 
                         Text="00:00" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         Foreground="#F59E0B"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Border Background="#F3F4F6" Padding="12" CornerRadius="6" Margin="0,15,0,0">
                        <TextBlock Text="💡 Idle detection helps track break time and prevents logging during inactivity. Default threshold: 5 minutes." 
                     FontSize="12" 
                     Foreground="#6B7280"
                     TextWrapping="Wrap"
                     HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Enhanced Session Stats -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                     Text="📊 Enhanced Session Analytics" 
                     FontSize="16" 
                     FontWeight="SemiBold"/>

             <Button Grid.Column="1"
            Name="ExportButton"
            Content="📤 Export CSV"
            Background="#3B82F6"
            Foreground="White"
            Padding="12,6"
            BorderThickness="0"
            FontSize="12"
            Click="ExportData">
                                <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Productivity Score" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="ProductivityScoreText" 
                         Text="0%" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="#10B981"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Focus Ratio" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="FocusRatioText" 
                         Text="0:0" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="#1E40AF"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Session Length" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="SessionLengthText" 
                         Text="00:00:00" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="#F59E0B"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activity Log -->
            <Border Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="📝 Recent Activity Log" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ListView Name="ActivityListView" 
                                BorderThickness="0"
                                Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FAFC" 
                                          Padding="15" 
                                          CornerRadius="8" 
                                          Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                     Text="{Binding ProductivityIcon}" 
                                                     FontSize="16" 
                                                     Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding AppName}" 
                                                         FontWeight="Medium"/>
                                                <TextBlock Text="{Binding WindowTitle}" 
                                                         FontSize="12" 
                                                         Foreground="#6B7280"
                                                         TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                     Text="{Binding DurationText}" 
                                                     FontWeight="Medium"
                                                     Foreground="#1E40AF"
                                                     Margin="10,0"/>

                                            <TextBlock Grid.Column="3" 
                                                     Text="{Binding TimeText}" 
                                                     FontSize="12" 
                                                     Foreground="#6B7280"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    </Grid>
</UserControl>