<UserControl x:Class="FocusAssistant.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="AnalyticsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header with Export Options -->
            <Border Style="{StaticResource AnalyticsCardStyle}" Margin="10,20,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="📊 Data Analytics and Export Center" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="#1E40AF"/>
                        <TextBlock Text="Analyze your productivity patterns and export data for further analysis" 
                                 FontSize="13" 
                                 Foreground="#6B7280"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ComboBox Name="ExportTypeCombo" 
                                Width="180" 
                                Margin="0,0,10,0"
                                SelectedIndex="0">
                            <ComboBoxItem Content="Raw Sessions"/>
                            <ComboBoxItem Content="ML Training Data"/>
                            <ComboBoxItem Content="Daily Reports"/>
                            <ComboBoxItem Content="App Usage Details"/>
                        </ComboBox>

                        <Button Content="📤 Export CSV" 
                                Background="#3B82F6" 
                                Foreground="White" 
                                Padding="15,8" 
                                BorderThickness="0" 
                                Margin="0,0,5,0"
                                Click="ExportCSV"/>

                        <Button Content="📋 Export JSON" 
                                Background="#10B981" 
                                Foreground="White" 
                                Padding="15,8" 
                                BorderThickness="0" 
                                Click="ExportJSON"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Today's Summary -->
            <Border Style="{StaticResource AnalyticsCardStyle}">
                <StackPanel>
                    <TextBlock Text="📈 Today's Productivity Report" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Work Time" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TodayWorkTimeText" 
                                     Text="0h 0m" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Foreground="#1E40AF"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Productivity Score" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TodayProductivityText" 
                                     Text="0%"
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#10B981"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Sessions" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TodaySessionsText" 
                                    Text="0" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#F59E0B"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="App Switches" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="TodayAppSwitchesText" 
                                    Text="0" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#EF4444"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Weekly Trends -->
            <Border Style="{StaticResource AnalyticsCardStyle}">
                <StackPanel>
                    <TextBlock Text="📅 7-Day Productivity Trend" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,15"/>

                    <DataGrid Name="WeeklyTrendGrid" 
                           AutoGenerateColumns="False"
                           IsReadOnly="True"
                           GridLinesVisibility="None"
                           HeadersVisibility="Column"
                           Background="Transparent"
                           BorderThickness="0"
                           MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='{}{0:MMM dd}'}" Width="80"/>
                            <DataGridTextColumn Header="Work Time" Binding="{Binding WorkTimeFormatted}" Width="80"/>
                            <DataGridTextColumn Header="Productivity" Binding="{Binding ProductivityFormatted}" Width="90"/>
                            <DataGridTextColumn Header="Sessions" Binding="{Binding NumberOfSessions}" Width="70"/>
                            <DataGridTextColumn Header="Top App" Binding="{Binding TopApp}" Width="120"/>
                            <DataGridTextColumn Header="Most Productive Hour" Binding="{Binding MostProductiveHour}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- App Analysis -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top Productive Apps -->
                <Border Grid.Column="0" Style="{StaticResource AnalyticsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🟢 Most Productive Apps (This Week)" 
                                FontSize="16" 
                                FontWeight="SemiBold" 
                                Margin="0,0,0,15"/>

                        <ListView Name="ProductiveAppsList" 
                               BorderThickness="0" 
                               Background="Transparent"
                               MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0FDF4" 
                                         Padding="12" 
                                         CornerRadius="6" 
                                         Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding AppName}" 
                                                        FontWeight="Medium" 
                                                        Foreground="#166534"/>
                                                <TextBlock Text="{Binding Category}" 
                                                        FontSize="12" 
                                                        Foreground="#65A30D"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding TimeSpent}" 
                                                        FontWeight="Bold" 
                                                        Foreground="#166534"
                                                        HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding Percentage}" 
                                                        FontSize="12" 
                                                        Foreground="#65A30D"
                                                        HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Top Distracting Apps -->
                <Border Grid.Column="1" Style="{StaticResource AnalyticsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔴 Most Distracting Apps (This Week)" 
                                FontSize="16" 
                                FontWeight="SemiBold" 
                                Margin="0,0,0,15"/>

                        <ListView Name="DistractingAppsList" 
                               BorderThickness="0" 
                               Background="Transparent"
                               MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FEF2F2" 
                                         Padding="12" 
                                         CornerRadius="6" 
                                         Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding AppName}" 
                                                        FontWeight="Medium" 
                                                        Foreground="#DC2626"/>
                                                <TextBlock Text="{Binding Category}" 
                                                        FontSize="12" 
                                                        Foreground="#F87171"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding TimeSpent}" 
                                                        FontWeight="Bold" 
                                                        Foreground="#DC2626"
                                                        HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding Percentage}" 
                                                        FontSize="12" 
                                                        Foreground="#F87171"
                                                        HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Data Quality & ML Readiness -->
            <Border Style="{StaticResource AnalyticsCardStyle}">
                <StackPanel>
                    <TextBlock Text="🤖 ML Training Data Status" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Data Points" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="DataPointsText" 
                                    Text="0" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#1E40AF"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Days Tracked" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="DaysTrackedText" 
                                    Text="0" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#10B981"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Unique Apps" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="UniqueAppsText" 
                                    Text="0" 
                                    FontSize="18" 
                                    FontWeight="Bold" 
                                    Foreground="#F59E0B"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Readiness" FontWeight="Medium" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Name="ReadinessStatusText" 
                                    Text="Not Ready" 
                                    FontSize="14" 
                                    FontWeight="Bold" 
                                    Foreground="#EF4444"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Border Background="#F3F4F6" Padding="15" CornerRadius="8" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Name="ReadinessMessageText" 
                                    Text="Collect more data to enable ML training. Recommended: 7+ days, 100+ data points." 
                                    FontSize="12" 
                                    Foreground="#6B7280"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Center"/>

                            <ProgressBar Name="DataReadinessProgress" 
                                      Height="8" 
                                      Margin="0,10,0,0"
                                      Background="#E5E7EB"
                                      Foreground="#3B82F6"
                                      Value="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>